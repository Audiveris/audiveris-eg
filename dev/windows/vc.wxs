<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    
    <Fragment Id="vcFragment">
        
        <!-- VC++ run time (this leads to many warnings) -->
        <DirectoryRef Id="TARGETDIR">
            <Merge Id="VCRedist.MID" 
                   SourceFile="$(var.myVC)" 
                   DiskId="1" 
                   Language="0"/>
        </DirectoryRef>            
        
        <Feature Id="VCFeature" 
                 Title="Visual C++ 8.0 Runtime" 
                 AllowAdvertise="no" 
                 Display="hidden" 
                 Level="1">
            <MergeRef Id="VCRedist.MID"/>
        </Feature>

    </Fragment>
</Wix>
