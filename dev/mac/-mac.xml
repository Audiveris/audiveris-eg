<project name="mac" basedir="../..">
  
    <description>
        All targets specific to Mac platform.
    
        Targets are presented in alphabetical order, regardless of initial '-'.
        An initial '-' indicates an internal target.
        (and all targets here should be internal)
    </description>
  
    <!--
      TODO: Populate this skeleton as needed.
    -->    
  
    <!-- ===  Internal Targets  ============================================ --> 
    
    <!-- ====== -->
    <!-- -clean -->
    <!-- ====== -->
    <target name="-clean"
            if="${is.mac}">
        <!-- Remove all the generated outputs for Mac -->
        <echo message="mac.-clean is void for the time being" />
    </target>  
  
    <!-- ======================= -->
    <!--  - I N S T A L L E R S  -->
    <!-- ======================= -->
    <!-- Build Mac installers for 32bit and 64bit architectures-->
    <target name="-installers"
            depends=""
            if="${is.mac}">
        <echo message="mac.-installers is void for the time being" />
    </target>    

    <!-- ============= -->
    <!-- -do-pack-libs -->
    <!-- ============= -->
    <!-- Pack all native libs of an arch into a .jar file -->
    <target name="-do-pack-libs">
        <echo message="mac.-do-pack-libs is void for the time being" />
    </target>
  
</project>
