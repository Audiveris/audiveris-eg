<project name="-prolog" basedir="..">
    
    <description>
        Subproject for initialization sequence
    </description>

    <property name="dev.dir" location="${basedir}/dev"/>

    <!-- Give users a chance to override properties -->
    <property file="${dev.dir}/build.properties"/>

    <!-- Finally, get all default property values -->
    <property file="${dev.dir}/build.default.properties"/>

    <!-- Load the environment variables -->
    <property environment="env"/>
    
    <!-- Tools classpath -->
    <path id="tools.classpath">
        <fileset dir="${tools.dir}">
            <include name="**/*.jar"/>
        </fileset>
    </path>
    
    <!-- Externals classpath -->
    <path id="externals.classpath">
        <fileset dir="${externals.dir}">
            <include name="**/*.jar"/>
        </fileset>
    </path>
        
    <!-- =========== -->
    <!--  - I N I T  -->
    <!-- =========== -->
    <target name="-init">
<!--         description="Initialize the environment." -->

        <!-- Create the time stamp -->
        <tstamp/>

	<!-- Remember if Hg is not present -->
        <condition property="no.hg.present">
            <not>
                <available file="${hg.dir}" />
            </not>
        </condition>

<!--	<echo>
	    no.hg.present=${no.hg.present}
	</echo>-->

	<!-- Remember if Junit is present -->
        <available
            property="junit.present"
            file="${junit.jar}"
            />

    </target>
    
</project>
