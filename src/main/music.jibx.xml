<!--
     Definition of Score binding to MusicXML format
     
     $Id$
     -->

<binding direction="output">

    <!-- ==============  -->
    <!-- score-partwise  -->
    <!-- ==============  -->
    <mapping name="score-partwise" class="omr.score.ScorePartWise">

	<value name="version" constant="1.1" style="attribute" />

	<structure name="identification">
	    <structure name="encoding">
 		<value name="software" get-method="getSoftware" />
		<value name="encoding-date" get-method="getDate" />
	    </structure>
	    <value name="source" get-method="getSource" />
	</structure>

	<structure name="part-list" get-method="getPartList">
	    <collection	item-type="omr.score.ScorePart" />
	</structure>
	
	<structure name="part">
	    <value name="id" constant="P1" style="attribute" />
	    <collection
		item-type="omr.score.Measure"
		get-method="getMeasures">
	    </collection>
	</structure>
    </mapping>
    
    <!-- ==========  -->
    <!-- score-part  -->
    <!-- ==========  -->
    <mapping name="score-part" class="omr.score.ScorePart">
	<value name="id" get-method="getPid" style="attribute" />
	<value name="part-name" field="name" />
    </mapping>
    
    <!-- =======  -->
    <!-- measure  -->
    <!-- =======  -->
    <mapping name="measure" class="omr.score.Measure" value-style="attribute">
	<value name="number" field="id" />
	<value name="width" get-method="getWidth" />
    </mapping>
	
</binding>
