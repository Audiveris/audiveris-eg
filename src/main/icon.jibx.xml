<!--
     Definition of SymbolIcon binding to load and store Icon using ASCII 
     description
     
     $Id$
     -->

<binding>

    <!--      -->
    <!-- Icon -->
    <!--      -->
    <mapping name="icon"
             class="omr.ui.icon.SymbolIcon"
	     value-style="attribute">
	
	<value name="name" field="name"/>
	
	<structure name="dimension" field="dimension" usage="optional"
		   get-method="getDimension" >
	    <value name="width"	 field="width" />
	    <value name="height" field="height" />
	</structure>
        
	<structure name="centroid" field="centroid" usage="optional"
		   get-method="getCentroid" >
	    <value name="x" field="x" />
	    <value name="y" field="y" />
         </structure>

	<structure name="ref-point" field="refPoint" usage="optional">
	    <value name="x" field="x" />
	    <value name="y" field="y" />
         </structure>

 	<value name="stem-number" field="stemNumber"
	       style="element"
 	       usage="optional"
 	       default="0" />
	
  	<value name="has-ledger" field="hasLedger"
	       style="element"
  	       usage="optional"
  	       default="false" />
	
 	<value name="pitch-position" field="pitchPosition"
	       style="element"
 	       usage="optional"
	       default="0"/>

	<collection name="bitmap" value-style="element"
		    get-method="getBitmap"
		    set-method="setBitmap">
  	    <value name="row" />
	</collection>

    </mapping>
    
</binding>
